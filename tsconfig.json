{
  "compilerOptions": {
    "module": "commonjs",
    "target": "esnext",
    "jsx": "preserve",
    "lib": ["dom", "esnext"],
    "strict": true,
    "noEmit": true,
    "types": ["react"], // done to pass type check
    "isolatedModules": true,
    "esModuleInterop": true,
    "noUnusedLocals": false, // done due to compat with babel
    "baseUrl": "./src", // done to get absolute paths working in vscode.
    "paths": {
      "*": ["types/*", "*"]
    }
  },
  "exclude": ["node_modules", "public", ".cache"]
}
